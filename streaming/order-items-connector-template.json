{
  "name": "datavelocity-order-items-sink",
  "config": {
    "connector.class": "com.snowflake.kafka.connector.SnowflakeSinkConnector",
    "tasks.max": "1",
    "topics": "order-items-events",

    "snowflake.url.name": "<Snowflake Url>",
    "snowflake.user.name": "KAFKA_CONNECT_USER",
    "snowflake.private.key": "<RSA PRIVATE KEY>",
    "snowflake.role.name": "KAFKA_CONNECTOR_ROLE",
    "snowflake.database.name": "DATAVELOCITY",
    "snowflake.schema.name": "BRONZE",

    "snowflake.topic2table.map": "order-items-events:ORDER_ITEMS_STREAM",

    "buffer.count.records": "5000",
    "buffer.flush.time": "30",
    "buffer.size.bytes": "2000000",

    "snowflake.ingestion.method": "SNOWPIPE_STREAMING",
    "snowflake.enable.schematization": "false",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true"
  }
}