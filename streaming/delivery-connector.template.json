{
  "name": "datavelocity-delivery-sink",
  "config": {
    "connector.class": "com.snowflake.kafka.connector.SnowflakeSinkConnector",
    "tasks.max": "2",
    "topics": "delivery-events",

    "snowflake.url.name": "<Snowflake Url>",
    "snowflake.user.name": "KAFKA_CONNECT_USER",
    "snowflake.private.key": "<RSA PRIVATE KEY>",
    "snowflake.role.name": "KAFKA_CONNECTOR_ROLE",
    "snowflake.database.name": "DATAVELOCITY",
    "snowflake.schema.name": "BRONZE",

    "snowflake.topic2table.map": "delivery-events:DELIVERY_STREAM",
    "snowflake.ingestion.method": "SNOWPIPE_STREAMING",
    "snowflake.enable.schematization": "false",
    "buffer.count.records": "10000",
    "buffer.flush.time": "60",
    "buffer.size.bytes": "5000000",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true"
  }
}